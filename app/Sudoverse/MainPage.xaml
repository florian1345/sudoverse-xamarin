<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sudoverse.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <Grid RowSpacing="25" RowDefinitions="Auto,Auto,Auto,Auto,*"
              Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <Image Grid.Row="0"
                Source="logo.png"
                SemanticProperties.Description="The Sudoverse logo"
                WidthRequest="250"
                HeightRequest="310"
                HorizontalOptions="Center" />

            <Button 
                Text="Editor"
                FontAttributes="Bold"
                Grid.Row="1"
                SemanticProperties.Hint="Opens the Sudoku editor"
                Clicked="OnEditor"
                HorizontalOptions="Center" />

        </Grid>
    </ScrollView>
</ContentPage>
