<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sudoverse.EditorPage"
             xmlns:layouts="clr-namespace:Sudoverse;assembly=Sudoverse">

    <layouts:SudokuPageLayout x:Name="Layout">
        <Grid
            x:Name="Buttons"
            RowSpacing="10"
            ColumnSpacing="10" >

            <Button
                Text="Solve"
                FontAttributes="Bold"
                Clicked="OnSolve"
                HorizontalOptions="Fill"
                Grid.Row="0"
                Grid.Column="0" />

            <Button
                Text="Check"
                FontAttributes="Bold"
                Clicked="OnCheck"
                HorizontalOptions="Fill"
                Grid.Row="0"
                Grid.Column="1" />

            <Button
                Text="Back"
                FontAttributes="Bold"
                Clicked="OnBack"
                HorizontalOptions="Fill"
                Grid.Row="1"
                Grid.Column="0" />
        </Grid>
    </layouts:SudokuPageLayout>

</ContentPage>